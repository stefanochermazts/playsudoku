includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/
        - config/
        - database/
        - routes/
        - tests/

    # Rule level 1-9 (9 is strictest)
    level: 6

    ignoreErrors:
        # Ignore Livewire magic methods and properties
        - '#Call to an undefined method Livewire\\Component::\$[a-zA-Z0-9_]+\(\)#'
        - '#Access to an undefined property Livewire\\Component::\$[a-zA-Z0-9_]+#'
        
        # Ignore some Laravel magic
        - '#Call to an undefined method Illuminate\\Database\\Eloquent\\Builder#'
        - '#Method .* has no return type specified#'
        
        # Ignore test-specific patterns
        - '#Call to an undefined method Tests\\.*#'
        - path: tests/*
          message: '#Unsafe usage of new static#'

    excludePaths:
        - ./*/*/FileToIgnore.php
        - bootstrap/cache/*
        - storage/*
        - vendor/*
        - node_modules/*

    reportUnmatchedIgnoredErrors: false
    tmpDir: build/phpstan
